# IDEALZR Backend Configuration
# Copy this to .env and adjust values for your environment

# Application
APP_NAME=IDEALZR
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
# SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./data/idealzr.db
# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/idealzr

# JWT Authentication (shared with CommandCentral)
# IMPORTANT: Must match CommandCentral's secret for cross-service auth
SECRET_KEY=change-me-in-production-use-a-strong-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# Other Services (CommandCentral Platform)
COMMANDCENTRAL_URL=http://localhost:8000
PIPELZR_URL=http://localhost:8001
VISLZR_URL=http://localhost:8002

# KnowledgeBeast (optional)
KNOWLEDGEBEAST_COLLECTION=idealzr_intelligence
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Forecasting Configuration
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MAX_FORECAST_HORIZON_DAYS=365
