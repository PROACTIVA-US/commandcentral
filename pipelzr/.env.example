# PIPELZR Backend Configuration
# Copy this to .env and adjust values for your environment

# Application
APP_NAME=PIPELZR
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
# SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./data/pipelzr.db
# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pipelzr

# JWT Authentication (shared with CommandCentral)
# IMPORTANT: Change this in production!
SECRET_KEY=change-me-in-production-use-a-strong-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# Other Services (CommandCentral Platform)
COMMANDCENTRAL_URL=http://localhost:8000
VISLZR_URL=http://localhost:8002
IDEALZR_URL=http://localhost:8003

# Execution Backends
DAGGER_ENABLED=false
E2B_ENABLED=false
E2B_API_KEY=

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_ITERATIONS=100

# Pipeline Configuration
MAX_CONCURRENT_PIPELINES=5
PIPELINE_TIMEOUT_SECONDS=3600

# Codebase Indexing
INDEX_DIRECTORY=./data/indexes
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
