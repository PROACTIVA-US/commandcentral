# VISLZR Backend Configuration
# Copy this to .env and adjust values for your environment

# Application
APP_NAME=VISLZR
APP_VERSION=1.0.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Database
# SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./data/vislzr.db
# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vislzr

# JWT Authentication (must match CommandCentral)
# IMPORTANT: Change this in production!
SECRET_KEY=change-me-in-production-use-a-strong-random-key
JWT_ALGORITHM=HS256

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:5173

# Rate Limiting
RATE_LIMIT_REQUESTS=10000
RATE_LIMIT_WINDOW=60

# Other Services (CommandCentral Platform)
COMMANDCENTRAL_URL=http://localhost:8000
PIPELZR_URL=http://localhost:8001
IDEALZR_URL=http://localhost:8003

# Canvas Configuration
DEFAULT_LAYOUT=force-directed
MAX_NODES_PER_CANVAS=500
MAX_RELATIONSHIPS_PER_CANVAS=2000

# Exploration Configuration
MAX_DEPTH=5
DEFAULT_DEPTH=2
